# Penaltyblog Environment Configuration
# Copy this file to .env and fill in your API keys and configuration

# Optional: API Keys for enhanced data sources
# FOOTBALL_DATA_API_KEY=your_api_key_here
# STATSBOMB_API_KEY=your_api_key_here

# Optional: Database configuration for data persistence
# DATABASE_URL=sqlite:///penaltyblog.db
# POSTGRES_URL=postgresql://user:password@localhost:5432/penaltyblog

# Optional: Cache configuration
# CACHE_DIR=~/.penaltyblog/cache
# CACHE_EXPIRY_HOURS=24

# Optional: Logging configuration
# LOG_LEVEL=INFO
# LOG_FILE=penaltyblog.log

# Optional: Web scraping configuration
# REQUEST_TIMEOUT=30
# MAX_RETRIES=3
# RATE_LIMIT_DELAY=1.0

# Optional: Model training configuration
# MODEL_CACHE_DIR=~/.penaltyblog/models
# RANDOM_SEED=42

# Development settings
# PENALTYBLOG_ENV=development
# DEBUG=false